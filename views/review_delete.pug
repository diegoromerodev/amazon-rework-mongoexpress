extends layout

block content
    .container
        if errors
                ul.errors
                    h3.error-header Please fix the following problem#{errors.length>1 ? "s" : ""}:
                    for error in errors
                        li= (error.msg || error)
        h1.form Deleting #{review.author}'s review
        .delete-info
            p Rating
            h2= review.rating
            .separator
            p Author
            h2= review.author
            .separator
            p Review
            h2= review.text
        form(action="" method="post")
            .delete-pass
                label(for="rev-pass") Admin Password:
                input#rev-pass(name="password" value="")
            button(type="submit") Delete review
        