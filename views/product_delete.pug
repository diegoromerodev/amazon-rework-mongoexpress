extends layout

block content
    .container
        if errors
                ul.errors
                    h3.error-header Please fix the following problem#{errors.length>1 ? "s" : ""}:
                    for error in errors
                        li= (error.msg || error)
        h1.form Deleting #{product.name}
        .delete-info
            p Date added
            h2= product.formatted_date
            .separator
            p Brand
            h2= product.brand.name
            .separator
            p Name
            h2= product.name
            .separator
            p Description
            h2= product.description
            .separator
            p Category
            h2= product.category.name
        form(action="" method="post")
            .delete-pass
                    label(for="rev-pass") Admin Password:
                    input#rev-pass(name="password" value="")
            button(type="submit") Delete product and reviews
        