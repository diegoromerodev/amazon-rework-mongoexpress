doctype html
html
  head
    title= title + " - Amazon.com  "
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    #nav-bar
        a(href="/")
            img(src="/images/amz-logo.svg" alt="Amazon's logo")
        form.nav-search(action="/search")
            input(type="text" name="query" placeholder="Search everything...")
            button(type="submit")
                img(src="/images/magnifying-glass.svg" alt="Search")
        .menu-item.invert.hover#ham-button
            img(src="/images/menu-button-of-three-horizontal-lines.svg")
        .menu-item.hover
            img(src="/images/united-states.svg")
        .cart.hover
            img(src="data:image/svg+xml;base64,")
            p 
             strong Cart
    #ham-menu
        ul
            li.cat-head
                h3 CATEGORIES
                img(src="/images/cancel.svg")
            li.cat-item
                a(href="/categories") 
                    strong All Categories
            li.cat-item
                a(href="/brands")
                    strong All Brands
            for cat in categories.slice(0, 8)
                li.cat-item
                    a(href=cat.url)= cat.name.toUpperCase()
    block content
    script(src="/javascripts/hamburger.js") 
