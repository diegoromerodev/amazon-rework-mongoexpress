extends layout

block content
    .container
        if errors
            ul.errors
                h3.error-header Please fix the following problem#{errors.length>1 ? "s" : ""}:
                for error in errors
                    li= (error.msg || error)
        h1.form= title
        form(method="post" enctype="multipart/form-data" action="")
            .input-section
                label(for="brand-logo") Brand logo:
                input#brand-name(type="file" name="logo" value="")
                .separator
                label(for="brand-name") Brand name:
                input#brand-name(name="name" value=(name !== undefined ? name : ""))
                if admin
                    .separator
                    label(for="brand-pass") Admin Password:
                    input#brand-pass(name="password" value="")
            button(type="submit") Save brand
