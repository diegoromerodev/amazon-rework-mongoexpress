extends layout

block content
    .container
        if errors
                    ul.errors
                        h3.error-header Please fix the following problem#{errors.length>1 ? "s" : ""}:
                        for error in errors
                            li= (error.msg || error)
        h1.form Deleting brand: #{brand.name}
        .delete-info
            p Name
            h2= brand.name
        form(action="" method="post")
            .delete-pass
                    label(for="rev-pass") Admin Password:
                    input#rev-pass(name="password" value="")
            button(type="submit") Delete brand and products
        